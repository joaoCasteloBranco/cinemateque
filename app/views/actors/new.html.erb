<h1>Adicionar novo Ator</h1>

<%= form_with( model: @actor) do |f| %>

<div>
  <%= f.label :name, "Nome" %>
  <%= f.text_field :name %>
</div>

<div>
  <%= f.label :nacionality, "Nacionalidade" %>
  <%= f.text_field :nacionality %>
</div>

<div>
  <%= f.label :birth_date, "Data de Nascimento" %>
  <%= f.text_field :birth_date %>
</div>

<%= f.submit "Adicionar Artista" %>

<% end %>